@model Northwind_CRUD.Models.OrderModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
    <title>刪除訂單</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <h3>請確認是否刪除該筆資料?</h3>
            <fieldset>

                <div class="display-label">
                    訂單編號：
                </div>
                <div class="display-field" style="color:red;">
                    @Html.DisplayFor(model => model.OrderID)
                </div>

                <div class="display-label">
                    訂購機構名稱：
                </div>
                <div class="display-field" style="color:red;">
                    @Html.DisplayFor(model => model.CompanyName)
                </div>

                <div class="display-label">
                    訂單日期：
                </div>
                <div class="display-field" style="color:red;">
                    @Html.DisplayFor(model => model.OrderDate)
                </div>

                <div class="display-label">
                    目的地：
                </div>
                <div class="display-field" style="color:red;">
                    @Html.DisplayFor(model => model.ShipName)
                </div>

                <div class="display-label">
                    目的地所在城市：
                </div>
                <div class="display-field" style="color:red;">
                    @Html.DisplayFor(model => model.ShipCity)
                </div>
                <p>
                    <input type="submit" class="btn btn-primary" value="確認刪除" />
                    <a href="@Url.Action("Index", "CRUD")" class="btn btn-primary" id="cancel">放棄並返回</a>
                </p>
            </fieldset>
        }
    </div>
</body>
</html>
